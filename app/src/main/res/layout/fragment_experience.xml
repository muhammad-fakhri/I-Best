<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:columnCount="2"
tools:context=".story.ExperienceFragment">
<android.support.v7.widget.CardView
        android:id="@+id/problem_3"
        style="@style/GridTopic.LeftStory"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_columnWeight="1"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/fisher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="@dimen/activity_horizontal_margin_half"
                android:paddingRight="@dimen/activity_horizontal_margin_half"
                android:paddingBottom="@dimen/activity_vertical_margin_half"
                android:text="Surga Ikan Segar tapi Kasus Stunting Tinggi, Kenapa Ya?"
                android:textAlignment="textStart"
                android:textColor="#EFF3F5"
                android:textSize="10sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:id="@+id/problem_2"
    style="@style/GridTopic.RightStory"
    android:layout_width="0dp"
    android:layout_height="156dp"
    android:layout_columnWeight="1"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mengemis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/roboto_black"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:text="Terpaksa Mengemis, Penderita Stunting Rawat Ayah Menderita Stroke"
            android:textAlignment="textStart"
            android:textColor="#EFF3F5"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
        android:id="@+id/problem_1"
        style="@style/GridTopic.LeftStory"
        android:layout_width="0dp"
        android:layout_height="156dp"
        android:layout_columnWeight="1"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/stunting_masih_ada" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="@dimen/activity_horizontal_margin_half"
                android:paddingRight="@dimen/activity_horizontal_margin_half"
                android:paddingBottom="@dimen/activity_vertical_margin_half"
                android:text="Stunting Masih Ada di Zaman Telepon Pintar, Bagaimana Penanganannya?"
                android:textAlignment="textStart"
                android:textColor="#EFF3F5"
                android:textSize="10sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:id="@+id/problem_4"
    style="@style/GridTopic.RightStory"
    android:layout_width="0dp"
    android:layout_height="156dp"
    android:layout_columnWeight="1"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/stunting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/roboto_black"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:text="Lahir dari ibu penderita anemia, Arya dan kedua adiknya alami stunting"
            android:textAlignment="textStart"
            android:textColor="#EFF3F5"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
</GridLayout>