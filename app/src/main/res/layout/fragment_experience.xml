<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:columnCount="2"
tools:context=".story.ExperienceFragment">

<android.support.v7.widget.CardView
    style="@style/GridTopic.LeftStory"
    android:layout_width="0dp"
    android:layout_height="156dp"
    android:layout_columnWeight="1"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_pic_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/roboto_black"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:text="AKU KAYA ! WAHAHAHAHAHAHAH"
            android:textAlignment="textStart"
            android:textColor="#EFF3F5"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    style="@style/GridTopic.RightStory"
    android:layout_width="0dp"
    android:layout_height="156dp"
    android:layout_columnWeight="1"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_pic_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/roboto_black"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:text="HALO GUYS, KEMBALI LAGI BERSAMA GW "
            android:textAlignment="textStart"
            android:textColor="#EFF3F5"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
</GridLayout>