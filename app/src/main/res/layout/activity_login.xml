<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_1"
    android:padding="28dp"
    tools:context=".ui.login.LoginActivity">

    <LinearLayout
        android:id="@+id/tagline_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/login_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98">

        <TextView
            android:id="@+id/tagline_maintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Mari Berkontribusi"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp"
            tools:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/tagline_subtext"
            android:layout_width="242dp"
            android:layout_height="36dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/roboto"
            android:text="Cegah stunting sejak dini demi Indonesia yang siap bersaing"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/register_hint_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagline_wrapper">

        <EditText
            android:id="@+id/login_email"
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_password"
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            style="@style/Button.Login" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_hint_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_wrapper">

        <TextView
            android:id="@+id/register_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Belum memiliki akun?"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/register_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Ayo bergabung bersama kami."
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="14dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
